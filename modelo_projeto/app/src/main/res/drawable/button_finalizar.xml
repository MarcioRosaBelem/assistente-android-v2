<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#81C784" /> <!-- Verde mais escuro ao pressionar -->
            <corners android:radius="4dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <!-- Estado padrÃ£o -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/verde_claro" />
            <corners android:radius="4dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>