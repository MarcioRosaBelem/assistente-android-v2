<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formulário de Vistoria de Telhado"
            android:textSize="24sp"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Seção 1: Descrição -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Descrição"
            android:textSize="20sp"
            android:textColor="#2E7D32"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo / Material:"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoTipoMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/edit_text_border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Área (m²):"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/edit_text_border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inclinação:"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoInclinacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/edit_text_border" />

        <!-- Seção 2: Avaliação da Estrutura -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Avaliação da Estrutura"
            android:textSize="20sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacidade de carga:"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoCapacidadeCarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:minLines="4"
            android:gravity="top"
            android:background="@drawable/edit_text_border" />

        <!-- Seção 3: Avaliação da Irradiação Solar -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Avaliação da Irradiação Solar"
            android:textSize="20sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalhes da exposição solar:"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoExposicaoSolar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:minLines="4"
            android:gravity="top"
            android:background="@drawable/edit_text_border" />

        <!-- Seção 4: Conclusões e Recomendações -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Conclusões e Recomendações"
            android:textSize="20sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/telhadoConclusoesRecomendacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:minLines="5"
            android:gravity="top"
            android:background="@drawable/edit_text_border" />

        <!-- Seção 5: Atualização Pós-Instalação -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Atualização Pós-Instalação"
            android:textSize="20sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de sistema:"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoTipoSistema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/edit_text_border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Potência instalada (kW):"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoPotenciaInstalada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/edit_text_border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de placas:"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoNumeroPlacas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/edit_text_border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marca e modelo das placas:"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoMarcaModeloPlacas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/edit_text_border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inversor:"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoInversor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/edit_text_border" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produção de energia estimada:"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/telhadoProducaoEstimada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/edit_text_border" />

        <!-- Seção 6: Conclusão Final -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Conclusão Final"
            android:textSize="20sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O sistema de placa solar foi instalado com sucesso e está pronto para uso. Recomendamos que o cliente realize manutenções periódicas, com limpeza das placas para maximizar a produção de energia."
            android:textAlignment="textStart"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp" />

        <!-- Botões Cancelar e Salvar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:layout_marginEnd="20dp" />

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>