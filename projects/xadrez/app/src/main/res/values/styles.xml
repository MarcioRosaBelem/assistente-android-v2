<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base para o app -->
    <style name="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Remover qualquer estilo de botão padrão -->
        <item name="android:buttonStyle">@null</item>
    </style>
    <style name="ButtonPastelBlue" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_pastel_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>